    private async Task HandleFileUpload(InputFileChangeEventArgs e)
    {
        _loadStatus = string.Empty;
        _loadSuccess = false;

        try
        {
            var file = e.File;
            if (file == null)
            {
                _loadStatus = "No file selected.";
                _loadSuccess = false;
                return;
            }

            // Read file content
            var buffer = new byte[file.Size];
            await file.OpenReadStream(maxAllowedSize: 100 * 1024 * 1024).ReadAsync(buffer); // 100 MB max
            var json = System.Text.Encoding.UTF8.GetString(buffer);

            // Load the simulation
            bool success = SimulatorService.LoadSimulation(json);

            if (success)
            {
                _loadStatus = $"Simulation loaded successfully! Date: {_stats.CurrentDate:yyyy-MM-dd}";
                _loadSuccess = true;

                // Reset milestone tracking for new simulation
                _populationMilestones = new() { 10, 50, 100, 500, 1000, 5000, 10000 };
                _citiesMilestones = new() { 1, 5, 10, 25, 50 };
                _inventionMilestones = new() { 1, 10, 25, 50, 100 };
                _lastPopulation = 0;
                _lastCities = 0;
                _lastInventions = 0;

                await ShowNotification("Simulation loaded successfully!", "success");
            }
            else
            {
                _loadStatus = "Failed to load simulation. The file may be corrupted or invalid.";
                _loadSuccess = false;
                await ShowNotification("Failed to load simulation file.", "danger");
            }
        }
        catch (Exception ex)
        {
            _loadStatus = $"Error loading simulation: {ex.Message}";
            _loadSuccess = false;
            await ShowNotification($"Error loading simulation: {ex.Message}", "danger");
        }
    }

