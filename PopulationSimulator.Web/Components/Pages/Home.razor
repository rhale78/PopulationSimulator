    private void HandleStatsUpdated(SimulationStats stats)
    {
        // Check for population milestones
        if (stats.LivingPopulation != _lastPopulation)
        {
            foreach (var milestone in _populationMilestones)
            {
                if (_lastPopulation < milestone && stats.LivingPopulation >= milestone)
                {
                    _ = ShowNotification($"Population reached {milestone}!", "success");
                    _populationMilestones.Remove(milestone); // Only show once
                    break;
                }
            }
            _lastPopulation = stats.LivingPopulation;
        }

        // Check for first city
        if (_lastCities == 0 && stats.TotalCities > 0)
        {
            _ = ShowNotification("First city founded! Civilization begins!", "info");
        }

        // Check for city milestones
        if (stats.TotalCities != _lastCities)
        {
            foreach (var milestone in _citiesMilestones)
            {
                if (_lastCities < milestone && stats.TotalCities >= milestone)
                {
                    _ = ShowNotification($"{milestone} cities founded!", "info");
                    _citiesMilestones.Remove(milestone);
                    break;
                }
            }
            _lastCities = stats.TotalCities;
        }

        // Check for invention milestones
        if (stats.TotalInventions != _lastInventions)
        {
            foreach (var milestone in _inventionMilestones)
            {
                if (_lastInventions < milestone && stats.TotalInventions >= milestone)
                {
                    _ = ShowNotification($"{milestone} inventions discovered!", "success");
                    _inventionMilestones.Remove(milestone);
                    break;
                }
            }
            _lastInventions = stats.TotalInventions;
        }

        // Check for simulation end
        if (stats.SimulationEnded && !_stats.SimulationEnded)
        {
            _ = ShowNotification($"Simulation ended: {stats.EndReason}", "danger", 10000);
        }

        _stats = stats;

        // Update charts
        _ = UpdateCharts();

        InvokeAsync(StateHasChanged);
    }

