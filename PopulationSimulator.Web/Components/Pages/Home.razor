@page "/"
@using PopulationSimulator.Core
@using PopulationSimulator.Services
@using Microsoft.JSInterop
@inject SimulatorService SimulatorService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Population Simulator</PageTitle>

<div class="container-fluid mt-3">
    @* Controls at top as requested *@
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">⚙️ Controls</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group me-3" role="group">
                        <button class="btn @(_isPaused ? "btn-success" : "btn-secondary")" @onclick="TogglePause">
                            @(_isPaused ? "▶️ Resume" : "⏸️ Pause")
                        </button>
                        <button class="btn btn-success" @onclick="SimulatorService.IncreaseSpeed">
                            ➕ Speed Up
                        </button>
                        <button class="btn btn-warning" @onclick="SimulatorService.DecreaseSpeed">
                            ➖ Slow Down
                        </button>
                        <button class="btn btn-danger" @onclick="RestartSimulation">
                            🔄 Restart
                        </button>
                    </div>
                    <button class="btn btn-outline-secondary ms-2" @onclick="ToggleDarkMode">
                        @(_isDarkMode ? "☀️ Light" : "🌙 Dark")
                    </button>
                    <div class="mt-2">
                        <span class="text-muted">Current speed: @_simulationSpeed x (1 day per @((int)(1000.0 / Math.Max(1, _simulationSpeed)))ms)</span><br/>
                        <span class="text-muted">Status: @(_isPaused ? "⏸️ PAUSED" : "▶️ Running")</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📥 Export Data</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group-vertical d-grid gap-1" role="group">
                        <button class="btn btn-sm btn-outline-primary" @onclick="ExportPopulation">
                            💾 Export Population (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-primary" @onclick="ExportCities">
                            🏙️ Export Cities (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-primary" @onclick="ExportCountries">
                            🌍 Export Countries (CSV)
                        </button>
                    </div>
                    <div class="btn-group-vertical d-grid gap-1 mt-2" role="group">
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportInventions">
                            💡 Export Inventions (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportDisasters">
                            🌋 Export Disasters (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportBusinesses">
                            🏪 Export Businesses (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportSchools">
                            🎓 Export Schools (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportUniversities">
                            🏛️ Export Universities (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportEvents">
                            📰 Export Events (CSV)
                        </button>
                        <button class="btn btn-sm btn-success" @onclick="ExportAllJSON">
                            📦 Export All (JSON)
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Save/Load Section *@
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">💾 Save / Load Simulation</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Save Current Simulation</h6>
                            <p class="text-muted small">Save the entire simulation state to a file. You can load it later to continue from this point.</p>
                            <button class="btn btn-success" @onclick="SaveSimulation">
                                💾 Save Simulation
                            </button>
                        </div>
                        <div class="col-md-6">
                            <h6>Load Saved Simulation</h6>
                            <p class="text-muted small">Load a previously saved simulation file to restore all data and continue where you left off.</p>
                            <InputFile OnChange="HandleFileUpload" accept=".json" class="form-control mb-2" />
                            @if (!string.IsNullOrEmpty(_loadStatus))
                            {
                                <div class="alert @(_loadSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show mt-2" role="alert">
                                    @_loadStatus
                                    <button type="button" class="btn-close" @onclick="() => _loadStatus = string.Empty"></button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Search & Filter Section *@
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">🔍 Search & Filter</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Search Type</label>
                            <select class="form-select" @bind="_searchType">
                                <option value="People">People</option>
                                <option value="Cities">Cities</option>
                                <option value="Countries">Countries</option>
                                <option value="Inventions">Inventions</option>
                            </select>
                        </div>
                        <div class="col-md-8">
                            <label class="form-label">Search Query</label>
                            <input type="text" class="form-control" placeholder="Enter name to search..." @bind="_searchQuery" @bind:event="oninput" />
                        </div>
                    </div>

                    @if (_searchType == "People")
                    {
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label class="form-label">Gender</label>
                                <select class="form-select" @bind="_filterGender">
                                    <option value="">All</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Status</label>
                                <select class="form-select" @bind="_filterStatus">
                                    <option value="">All</option>
                                    <option value="Alive">Alive</option>
                                    <option value="Dead">Dead</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Min Age</label>
                                <input type="number" class="form-control" @bind="_filterMinAge" placeholder="0" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Max Age</label>
                                <input type="number" class="form-control" @bind="_filterMaxAge" placeholder="999" />
                            </div>
                        </div>
                    }

                    @if (_searchType == "Cities")
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Geography</label>
                                <select class="form-select" @bind="_filterGeography">
                                    <option value="">All</option>
                                    <option value="Coastal">Coastal</option>
                                    <option value="Mountain">Mountain</option>
                                    <option value="Plains">Plains</option>
                                    <option value="Desert">Desert</option>
                                    <option value="Forest">Forest</option>
                                    <option value="RiverValley">River Valley</option>
                                    <option value="Island">Island</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Climate</label>
                                <select class="form-select" @bind="_filterClimate">
                                    <option value="">All</option>
                                    <option value="Tropical">Tropical</option>
                                    <option value="Temperate">Temperate</option>
                                    <option value="Arid">Arid</option>
                                    <option value="Arctic">Arctic</option>
                                    <option value="Mediterranean">Mediterranean</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Min Population</label>
                                <input type="number" class="form-control" @bind="_filterMinPopulation" placeholder="0" />
                            </div>
                        </div>
                    }

                    <button class="btn btn-primary" @onclick="PerformSearch">
                        🔍 Search
                    </button>
                    <button class="btn btn-secondary ms-2" @onclick="ClearSearch">
                        Clear
                    </button>

                    @if (_searchResults != null && _searchResults.Any())
                    {
                        <div class="mt-3">
                            <h6>Results (@_searchResults.Count)</h6>
                            <div style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-striped table-sm">
                                    <thead>
                                        <tr>
                                            @if (_searchType == "People")
                                            {
                                                <th>Name</th>
                                                <th>Gender</th>
                                                <th>Age</th>
                                                <th>Status</th>
                                                <th>City</th>
                                            }
                                            else if (_searchType == "Cities")
                                            {
                                                <th>Name</th>
                                                <th>Population</th>
                                                <th>Geography</th>
                                                <th>Climate</th>
                                                <th>Country</th>
                                            }
                                            else if (_searchType == "Countries")
                                            {
                                                <th>Name</th>
                                                <th>Population</th>
                                                <th>Government</th>
                                                <th>Wealth</th>
                                                <th>Military</th>
                                            }
                                            else if (_searchType == "Inventions")
                                            {
                                                <th>Name</th>
                                                <th>Category</th>
                                                <th>Inventor</th>
                                                <th>Year</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var result in _searchResults.Take(100))
                                        {
                                            <tr>
                                                @((MarkupString)result)
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                @if (_searchResults.Count > 100)
                                {
                                    <p class="text-muted">Showing first 100 results of @_searchResults.Count</p>
                                }
                            </div>
                        </div>
                    }
                    else if (_searchResults != null)
                    {
                        <div class="alert alert-info mt-3">No results found.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    @* Main header *@
    <div class="row">
        <div class="col-12">
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">🌍 Advanced Population Simulator - Living World</h3>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Current simulation date in the virtual world">
                            <strong>Current Date:</strong> Year @_stats.CurrentDate.Year, Day @_stats.CurrentDate.DayOfYear
                        </div>
                        <div class="col-md-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Number of generations since Adam and Eve">
                            <strong>Generation:</strong> @_stats.GenerationNumber
                        </div>
                        <div class="col-md-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Living population gender distribution">
                            <strong>Gender:</strong> @_stats.MaleCount ♂ / @_stats.FemaleCount ♀
                        </div>
                        <div class="col-md-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Simulation speed multiplier (use +/- keys to adjust)">
                            <strong>Speed:</strong> @_simulationSpeed x
                        </div>
                    </div>
                    @if (_stats.SimulationEnded)
                    {
                        <div class="alert alert-danger mt-3 mb-0">
                            <strong>⚠️ Simulation Ended:</strong> @_stats.EndReason
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">📊 Population Statistics</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Total number of people ever born in the simulation">
                                <td><strong>Total Population:</strong></td>
                                <td class="text-end">@_stats.TotalPopulation</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Current living population count">
                                <td><strong>Living:</strong></td>
                                <td class="text-end">@_stats.LivingPopulation</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Living males in the population">
                                <td><strong>Males:</strong></td>
                                <td class="text-end">@_stats.MaleCount</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Living females in the population">
                                <td><strong>Females:</strong></td>
                                <td class="text-end">@_stats.FemaleCount</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Total births throughout history">
                                <td><strong>Total Births:</strong></td>
                                <td class="text-end">@_stats.TotalBirths</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Total deaths throughout history">
                                <td><strong>Total Deaths:</strong></td>
                                <td class="text-end">@_stats.TotalDeaths</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Total marriages formed in the simulation">
                                <td><strong>Total Marriages:</strong></td>
                                <td class="text-end">@_stats.TotalMarriages</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">🏛️ Civilization Progress</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of cities founded with varying geographies and climates">
                                <td><strong>Cities:</strong></td>
                                <td class="text-end">@_stats.TotalCities</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of countries established in the simulation">
                                <td><strong>Countries:</strong></td>
                                <td class="text-end">@_stats.TotalCountries</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of religions founded by the population">
                                <td><strong>Religions:</strong></td>
                                <td class="text-end">@_stats.TotalReligions</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of inventions discovered (affects disasters, health, and economy)">
                                <td><strong>Inventions:</strong></td>
                                <td class="text-end">@_stats.TotalInventions</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of wars fought between countries">
                                <td><strong>Wars:</strong></td>
                                <td class="text-end">@_stats.TotalWars</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of schools founded to educate children">
                                <td><strong>Schools:</strong></td>
                                <td class="text-end">@_stats.TotalSchools (@_stats.TotalStudents students)</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of universities founded for advanced education">
                                <td><strong>Universities:</strong></td>
                                <td class="text-end">@_stats.TotalUniversities (@_stats.TotalUniversityStudents students)</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Percentage of population that can read and write">
                                <td><strong>Literacy Rate:</strong></td>
                                <td class="text-end">@_stats.LiteracyRate.ToString("F1")% (@_stats.LiteratePopulation people)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @* Charts Section *@
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📊 Simulation Analytics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div style="height: 300px;">
                                <canvas id="populationChart"></canvas>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div style="height: 300px;">
                                <canvas id="birthDeathChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div style="height: 300px;">
                                <canvas id="inventionChart"></canvas>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div style="height: 300px;">
                                <canvas id="educationChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (_stats.TopJobs.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card mb-3">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">💼 Top Occupations</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Job</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var (job, index) in _stats.TopJobs.Select((j, i) => (j, i)))
                                {
                                    <tr>
                                        <td>@(index + 1)</td>
                                        <td>@job.JobName</td>
                                        <td class="text-end">@job.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    @* Family Tree with proper indentation *@
    @if (_stats.FamilyTrees.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">👨‍👩‍👧‍👦 Family Tree (Adam & Eve's Lineage)</h5>
                    </div>
                    <div class="card-body" style="max-height: 400px; overflow-y: auto; font-family: monospace;">
                        @RenderFamilyTreeWithIndent(_stats.FamilyTrees.First(), 0)
                    </div>
                </div>
            </div>
        </div>
    }

    @* Recent Births *@
    @{
        var recentBirths = _stats.RecentEvents.Where(e => e.EventType == "Birth").Take(10).ToList();
    }
    @if (recentBirths.Any())
    {
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">👶 Recent Births</h5>
                    </div>
                    <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                        <ul class="list-unstyled">
                            @foreach (var evt in recentBirths)
                            {
                                <li class="mb-2">
                                    <small class="text-muted">Year @evt.Date.Year:</small><br/>
                                    @evt.Description
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            @* Recent Marriages *@
            <div class="col-md-4">
                @{
                    var recentMarriages = _stats.RecentEvents.Where(e => e.EventType == "Marriage").Take(10).ToList();
                }
                @if (recentMarriages.Any())
                {
                    <div class="card mb-3">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">💑 Recent Marriages</h5>
                        </div>
                        <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                            <ul class="list-unstyled">
                                @foreach (var evt in recentMarriages)
                                {
                                    <li class="mb-2">
                                        <small class="text-muted">Year @evt.Date.Year:</small><br/>
                                        @evt.Description
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>

            @* Recent Deaths *@
            <div class="col-md-4">
                @{
                    var recentDeaths = _stats.RecentEvents.Where(e => e.EventType == "Death").Take(10).ToList();
                }
                @if (recentDeaths.Any())
                {
                    <div class="card mb-3">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">⚰️ Recent Deaths</h5>
                        </div>
                        <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                            <ul class="list-unstyled">
                                @foreach (var evt in recentDeaths)
                                {
                                    <li class="mb-2">
                                        <small class="text-muted">Year @evt.Date.Year:</small><br/>
                                        @evt.Description
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @* All Recent Events *@
    <div class="row">
        <div class="col-12">
            <div class="card mb-3">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">📰 Recent Events (All)</h5>
                </div>
                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                    @if (_stats.RecentEvents.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var evt in _stats.RecentEvents)
                            {
                                <li class="mb-2">
                                    <span class="badge @GetEventBadgeClass(evt.EventType)">@evt.EventType</span>
                                    <small class="text-muted">Year @evt.Date.Year:</small>
                                    @evt.Description
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No events yet...</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private SimulationStats _stats = new();
    private int _simulationSpeed = 1;
    private bool _isPaused = false;
    private bool _isDarkMode = false;

    // Milestone tracking
    private HashSet<int> _populationMilestones = new() { 10, 50, 100, 500, 1000, 5000, 10000 };
    private HashSet<int> _citiesMilestones = new() { 1, 5, 10, 25, 50 };
    private HashSet<int> _inventionMilestones = new() { 1, 10, 25, 50, 100 };
    private int _lastPopulation = 0;
    private int _lastCities = 0;
    private int _lastInventions = 0;

    // Save/Load status
    private string _loadStatus = string.Empty;
    private bool _loadSuccess = false;

    // Search & Filter state
    private string _searchType = "People";
    private string _searchQuery = string.Empty;
    private string _filterGender = string.Empty;
    private string _filterStatus = string.Empty;
    private int? _filterMinAge = null;
    private int? _filterMaxAge = null;
    private string _filterGeography = string.Empty;
    private string _filterClimate = string.Empty;
    private int? _filterMinPopulation = null;
    private List<string>? _searchResults = null;

    protected override void OnInitialized()
    {
        SimulatorService.OnStatsUpdated += HandleStatsUpdated;
        SimulatorService.OnSpeedChanged += HandleSpeedChanged;
        SimulatorService.OnSimulationRestarted += HandleSimulationRestarted;
        SimulatorService.OnPausedChanged += HandlePausedChanged;

        // Start the simulation
        SimulatorService.Start();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Setup keyboard shortcuts
            var dotNetRef = DotNetObjectReference.Create(this);
            await JSRuntime.InvokeVoidAsync("setupKeyboardShortcuts", dotNetRef);

            // Initialize dark mode state
            _isDarkMode = await JSRuntime.InvokeAsync<bool>("darkMode.isDarkMode");

            // Initialize Bootstrap tooltips
            await JSRuntime.InvokeVoidAsync("initializeTooltips");

            StateHasChanged();
