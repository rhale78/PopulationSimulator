    private async Task UpdateCharts()
    {
        try
        {
            // Population chart data
            var popData = new
            {
                labels = _stats.PopulationHistory.Select(p => $"Year {p.Year}").ToArray(),
                living = _stats.PopulationHistory.Select(p => p.Living).ToArray()
            };
            await JSRuntime.InvokeVoidAsync("charts.updatePopulationChart", "populationChart", popData);

            // Birth/Death chart data
            var birthDeathData = new
            {
                labels = _stats.PopulationHistory.Select(p => $"Year {p.Year}").ToArray(),
                births = _stats.PopulationHistory.Select(p => p.Births).ToArray(),
                deaths = _stats.PopulationHistory.Select(p => p.Deaths).ToArray()
            };
            await JSRuntime.InvokeVoidAsync("charts.updateBirthDeathChart", "birthDeathChart", birthDeathData);

            // Invention timeline (group by decade)
            var inventions = SimulatorService.GetAllInventions();
            var inventionsByDecade = inventions
                .GroupBy(i => (i.DiscoveryDate.Year / 10) * 10)
                .OrderBy(g => g.Key)
                .Take(20) // Last 20 decades
                .ToList();
            var inventionData = new
            {
                labels = inventionsByDecade.Select(g => $"{g.Key}s").ToArray(),
                inventions = inventionsByDecade.Select(g => g.Count()).ToArray()
            };
            await JSRuntime.InvokeVoidAsync("charts.updateInventionTimelineChart", "inventionChart", inventionData);

            // Education distribution
            var people = SimulatorService.GetAllPeople().Where(p => p.IsAlive).ToList();
            var educationCounts = people.GroupBy(p => p.EducationLevel)
                .Select(g => new { Level = g.Key, Count = g.Count() })
                .ToList();
            var educationData = new
            {
                labels = educationCounts.Select(e => e.Level).ToArray(),
                values = educationCounts.Select(e => e.Count).ToArray()
            };
            await JSRuntime.InvokeVoidAsync("charts.updateEducationChart", "educationChart", educationData);
        }
        catch (Exception ex)
        {
            // Silently fail if charts aren't ready yet
            Console.WriteLine($"Chart update error: {ex.Message}");
        }
    }

