@page "/"
@using PopulationSimulator.Core
@using PopulationSimulator.Services
@using Microsoft.JSInterop
@inject SimulatorService SimulatorService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Population Simulator</PageTitle>

<div class="container-fluid mt-3">
    @* Controls at top as requested *@
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">⚙️ Controls</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group me-3" role="group">
                        <button class="btn @(_isPaused ? "btn-success" : "btn-secondary")" @onclick="TogglePause">
                            @(_isPaused ? "▶️ Resume" : "⏸️ Pause")
                        </button>
                        <button class="btn btn-success" @onclick="SimulatorService.IncreaseSpeed">
                            ➕ Speed Up
                        </button>
                        <button class="btn btn-warning" @onclick="SimulatorService.DecreaseSpeed">
                            ➖ Slow Down
                        </button>
                        <button class="btn btn-danger" @onclick="RestartSimulation">
                            🔄 Restart
                        </button>
                    </div>
                    <button class="btn btn-outline-secondary ms-2" @onclick="ToggleDarkMode">
                        @(_isDarkMode ? "☀️ Light" : "🌙 Dark")
                    </button>
                    <div class="mt-2">
                        <span class="text-muted">Current speed: @_simulationSpeed x (1 day per @((int)(1000.0 / Math.Max(1, _simulationSpeed)))ms)</span><br/>
                        <span class="text-muted">Status: @(_isPaused ? "⏸️ PAUSED" : "▶️ Running")</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📥 Export Data</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group-vertical d-grid gap-1" role="group">
                        <button class="btn btn-sm btn-outline-primary" @onclick="ExportPopulation">
                            💾 Export Population (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-primary" @onclick="ExportCities">
                            🏙️ Export Cities (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-primary" @onclick="ExportCountries">
                            🌍 Export Countries (CSV)
                        </button>
                    </div>
                    <div class="btn-group-vertical d-grid gap-1 mt-2" role="group">
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportInventions">
                            💡 Export Inventions (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportDisasters">
                            🌋 Export Disasters (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportBusinesses">
                            🏪 Export Businesses (CSV)
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ExportEvents">
                            📰 Export Events (CSV)
                        </button>
                        <button class="btn btn-sm btn-success" @onclick="ExportAllJSON">
                            📦 Export All (JSON)
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Main header *@
    <div class="row">
        <div class="col-12">
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">🌍 Advanced Population Simulator - Living World</h3>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Current simulation date in the virtual world">
                            <strong>Current Date:</strong> Year @_stats.CurrentDate.Year, Day @_stats.CurrentDate.DayOfYear
                        </div>
                        <div class="col-md-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Number of generations since Adam and Eve">
                            <strong>Generation:</strong> @_stats.GenerationNumber
                        </div>
                        <div class="col-md-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Living population gender distribution">
                            <strong>Gender:</strong> @_stats.MaleCount ♂ / @_stats.FemaleCount ♀
                        </div>
                        <div class="col-md-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Simulation speed multiplier (use +/- keys to adjust)">
                            <strong>Speed:</strong> @_simulationSpeed x
                        </div>
                    </div>
                    @if (_stats.SimulationEnded)
                    {
                        <div class="alert alert-danger mt-3 mb-0">
                            <strong>⚠️ Simulation Ended:</strong> @_stats.EndReason
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">📊 Population Statistics</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Total number of people ever born in the simulation">
                                <td><strong>Total Population:</strong></td>
                                <td class="text-end">@_stats.TotalPopulation</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Current living population count">
                                <td><strong>Living:</strong></td>
                                <td class="text-end">@_stats.LivingPopulation</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Living males in the population">
                                <td><strong>Males:</strong></td>
                                <td class="text-end">@_stats.MaleCount</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Living females in the population">
                                <td><strong>Females:</strong></td>
                                <td class="text-end">@_stats.FemaleCount</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Total births throughout history">
                                <td><strong>Total Births:</strong></td>
                                <td class="text-end">@_stats.TotalBirths</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Total deaths throughout history">
                                <td><strong>Total Deaths:</strong></td>
                                <td class="text-end">@_stats.TotalDeaths</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="left" title="Total marriages formed in the simulation">
                                <td><strong>Total Marriages:</strong></td>
                                <td class="text-end">@_stats.TotalMarriages</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">🏛️ Civilization Progress</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of cities founded with varying geographies and climates">
                                <td><strong>Cities:</strong></td>
                                <td class="text-end">@_stats.TotalCities</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of countries established in the simulation">
                                <td><strong>Countries:</strong></td>
                                <td class="text-end">@_stats.TotalCountries</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of religions founded by the population">
                                <td><strong>Religions:</strong></td>
                                <td class="text-end">@_stats.TotalReligions</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of inventions discovered (affects disasters, health, and economy)">
                                <td><strong>Inventions:</strong></td>
                                <td class="text-end">@_stats.TotalInventions</td>
                            </tr>
                            <tr data-bs-toggle="tooltip" data-bs-placement="right" title="Number of wars fought between countries">
                                <td><strong>Wars:</strong></td>
                                <td class="text-end">@_stats.TotalWars</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @if (_stats.TopJobs.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card mb-3">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">💼 Top Occupations</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Job</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var (job, index) in _stats.TopJobs.Select((j, i) => (j, i)))
                                {
                                    <tr>
                                        <td>@(index + 1)</td>
                                        <td>@job.JobName</td>
                                        <td class="text-end">@job.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    @* Family Tree with proper indentation *@
    @if (_stats.FamilyTrees.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">👨‍👩‍👧‍👦 Family Tree (Adam & Eve's Lineage)</h5>
                    </div>
                    <div class="card-body" style="max-height: 400px; overflow-y: auto; font-family: monospace;">
                        @RenderFamilyTreeWithIndent(_stats.FamilyTrees.First(), 0)
                    </div>
                </div>
            </div>
        </div>
    }

    @* Recent Births *@
    @{
        var recentBirths = _stats.RecentEvents.Where(e => e.EventType == "Birth").Take(10).ToList();
    }
    @if (recentBirths.Any())
    {
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">👶 Recent Births</h5>
                    </div>
                    <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                        <ul class="list-unstyled">
                            @foreach (var evt in recentBirths)
                            {
                                <li class="mb-2">
                                    <small class="text-muted">Year @evt.Date.Year:</small><br/>
                                    @evt.Description
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            @* Recent Marriages *@
            <div class="col-md-4">
                @{
                    var recentMarriages = _stats.RecentEvents.Where(e => e.EventType == "Marriage").Take(10).ToList();
                }
                @if (recentMarriages.Any())
                {
                    <div class="card mb-3">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">💑 Recent Marriages</h5>
                        </div>
                        <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                            <ul class="list-unstyled">
                                @foreach (var evt in recentMarriages)
                                {
                                    <li class="mb-2">
                                        <small class="text-muted">Year @evt.Date.Year:</small><br/>
                                        @evt.Description
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>

            @* Recent Deaths *@
            <div class="col-md-4">
                @{
                    var recentDeaths = _stats.RecentEvents.Where(e => e.EventType == "Death").Take(10).ToList();
                }
                @if (recentDeaths.Any())
                {
                    <div class="card mb-3">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">⚰️ Recent Deaths</h5>
                        </div>
                        <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                            <ul class="list-unstyled">
                                @foreach (var evt in recentDeaths)
                                {
                                    <li class="mb-2">
                                        <small class="text-muted">Year @evt.Date.Year:</small><br/>
                                        @evt.Description
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @* All Recent Events *@
    <div class="row">
        <div class="col-12">
            <div class="card mb-3">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">📰 Recent Events (All)</h5>
                </div>
                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                    @if (_stats.RecentEvents.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var evt in _stats.RecentEvents)
                            {
                                <li class="mb-2">
                                    <span class="badge @GetEventBadgeClass(evt.EventType)">@evt.EventType</span>
                                    <small class="text-muted">Year @evt.Date.Year:</small>
                                    @evt.Description
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No events yet...</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private SimulationStats _stats = new();
    private int _simulationSpeed = 1;
    private bool _isPaused = false;
    private bool _isDarkMode = false;

    // Milestone tracking
    private HashSet<int> _populationMilestones = new() { 10, 50, 100, 500, 1000, 5000, 10000 };
    private HashSet<int> _citiesMilestones = new() { 1, 5, 10, 25, 50 };
    private HashSet<int> _inventionMilestones = new() { 1, 10, 25, 50, 100 };
    private int _lastPopulation = 0;
    private int _lastCities = 0;
    private int _lastInventions = 0;

    protected override void OnInitialized()
    {
        SimulatorService.OnStatsUpdated += HandleStatsUpdated;
        SimulatorService.OnSpeedChanged += HandleSpeedChanged;
        SimulatorService.OnSimulationRestarted += HandleSimulationRestarted;
        SimulatorService.OnPausedChanged += HandlePausedChanged;

        // Start the simulation
        SimulatorService.Start();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Setup keyboard shortcuts
            var dotNetRef = DotNetObjectReference.Create(this);
            await JSRuntime.InvokeVoidAsync("setupKeyboardShortcuts", dotNetRef);

            // Initialize dark mode state
            _isDarkMode = await JSRuntime.InvokeAsync<bool>("darkMode.isDarkMode");

            // Initialize Bootstrap tooltips
            await JSRuntime.InvokeVoidAsync("initializeTooltips");

            StateHasChanged();
        }
        else
        {
            // Refresh tooltips after UI updates
            await JSRuntime.InvokeVoidAsync("refreshTooltips");
        }
    }

    [JSInvokable]
    public void HandleKeyPress(string key)
    {
        switch (key)
        {
            case "Space":
                TogglePause();
                break;
            case "Plus":
                SimulatorService.IncreaseSpeed();
                break;
            case "Minus":
                SimulatorService.DecreaseSpeed();
                break;
        }
    }

    private void HandleStatsUpdated(SimulationStats stats)
    {
        // Check for population milestones
        if (stats.LivingPopulation != _lastPopulation)
        {
            foreach (var milestone in _populationMilestones)
            {
                if (_lastPopulation < milestone && stats.LivingPopulation >= milestone)
                {
                    _ = ShowNotification($"Population reached {milestone}!", "success");
                    _populationMilestones.Remove(milestone); // Only show once
                    break;
                }
            }
            _lastPopulation = stats.LivingPopulation;
        }

        // Check for first city
        if (_lastCities == 0 && stats.TotalCities > 0)
        {
            _ = ShowNotification("First city founded! Civilization begins!", "info");
        }

        // Check for city milestones
        if (stats.TotalCities != _lastCities)
        {
            foreach (var milestone in _citiesMilestones)
            {
                if (_lastCities < milestone && stats.TotalCities >= milestone)
                {
                    _ = ShowNotification($"{milestone} cities founded!", "info");
                    _citiesMilestones.Remove(milestone);
                    break;
                }
            }
            _lastCities = stats.TotalCities;
        }

        // Check for invention milestones
        if (stats.TotalInventions != _lastInventions)
        {
            foreach (var milestone in _inventionMilestones)
            {
                if (_lastInventions < milestone && stats.TotalInventions >= milestone)
                {
                    _ = ShowNotification($"{milestone} inventions discovered!", "success");
                    _inventionMilestones.Remove(milestone);
                    break;
                }
            }
            _lastInventions = stats.TotalInventions;
        }

        // Check for simulation end
        if (stats.SimulationEnded && !_stats.SimulationEnded)
        {
            _ = ShowNotification($"Simulation ended: {stats.EndReason}", "danger", 10000);
        }

        _stats = stats;
        InvokeAsync(StateHasChanged);
    }

    private async Task ShowNotification(string message, string type, int duration = 5000)
    {
        await JSRuntime.InvokeVoidAsync("showNotification", message, type, duration);
    }

    private void HandleSpeedChanged(int speed)
    {
        _simulationSpeed = speed;
        InvokeAsync(StateHasChanged);
    }

    private void HandleSimulationRestarted()
    {
        _stats = new SimulationStats();
        _simulationSpeed = 1;
        _isPaused = false;

        // Reset milestone tracking
        _populationMilestones = new() { 10, 50, 100, 500, 1000, 5000, 10000 };
        _citiesMilestones = new() { 1, 5, 10, 25, 50 };
        _inventionMilestones = new() { 1, 10, 25, 50, 100 };
        _lastPopulation = 0;
        _lastCities = 0;
        _lastInventions = 0;

        InvokeAsync(StateHasChanged);
    }

    private void HandlePausedChanged(bool isPaused)
    {
        _isPaused = isPaused;
        InvokeAsync(StateHasChanged);
    }

    private void RestartSimulation()
    {
        SimulatorService.Restart();
    }

    private void TogglePause()
    {
        SimulatorService.TogglePause();
    }

    private async Task ToggleDarkMode()
    {
        _isDarkMode = await JSRuntime.InvokeAsync<bool>("darkMode.toggle");
        StateHasChanged();
    }

    // ============================================================================
    // EXPORT FUNCTIONS
    // ============================================================================

    private async Task ExportPopulation()
    {
        var csv = SimulatorService.ExportPopulationAsCSV();
        await DownloadFile($"population_{_stats.CurrentDate:yyyy-MM-dd}.csv", csv, "text/csv");
    }

    private async Task ExportCities()
    {
        var csv = SimulatorService.ExportCitiesAsCSV();
        await DownloadFile($"cities_{_stats.CurrentDate:yyyy-MM-dd}.csv", csv, "text/csv");
    }

    private async Task ExportCountries()
    {
        var csv = SimulatorService.ExportCountriesAsCSV();
        await DownloadFile($"countries_{_stats.CurrentDate:yyyy-MM-dd}.csv", csv, "text/csv");
    }

    private async Task ExportInventions()
    {
        var csv = SimulatorService.ExportInventionsAsCSV();
        await DownloadFile($"inventions_{_stats.CurrentDate:yyyy-MM-dd}.csv", csv, "text/csv");
    }

    private async Task ExportDisasters()
    {
        var csv = SimulatorService.ExportDisastersAsCSV();
        await DownloadFile($"disasters_{_stats.CurrentDate:yyyy-MM-dd}.csv", csv, "text/csv");
    }

    private async Task ExportBusinesses()
    {
        var csv = SimulatorService.ExportBusinessesAsCSV();
        await DownloadFile($"businesses_{_stats.CurrentDate:yyyy-MM-dd}.csv", csv, "text/csv");
    }

    private async Task ExportEvents()
    {
        var csv = SimulatorService.ExportEventsAsCSV();
        await DownloadFile($"events_{_stats.CurrentDate:yyyy-MM-dd}.csv", csv, "text/csv");
    }

    private async Task ExportAllJSON()
    {
        var json = SimulatorService.ExportAllAsJSON();
        await DownloadFile($"simulation_{_stats.CurrentDate:yyyy-MM-dd}.json", json, "application/json");
    }

    private async Task DownloadFile(string filename, string content, string contentType)
    {
        var bytes = System.Text.Encoding.UTF8.GetBytes(content);
        var base64 = Convert.ToBase64String(bytes);
        await JSRuntime.InvokeVoidAsync("downloadFile", filename, base64, contentType);
    }

    private RenderFragment RenderFamilyTreeWithIndent(FamilyTreeNode node, int depth)
    {
        return builder =>
        {
            // Create proper indentation with └─ or ├─ characters
            var indent = depth == 0 ? "" : new string(' ', (depth - 1) * 2) + "└─";
            var status = node.IsAlive ? "✅" : "⚰️";
            var spouseInfo = !string.IsNullOrEmpty(node.SpouseName) ? $" ❤️ {node.SpouseName}" : "";
            
            builder.OpenElement(0, "div");
            builder.AddAttribute(1, "class", "mb-1");
            builder.AddAttribute(2, "style", $"padding-left: {depth * 20}px");
            builder.AddContent(3, $"{indent}{status} {node.FirstName} {node.LastName} ({node.Gender}, Age: {node.Age}){spouseInfo}");
            builder.CloseElement();

            if (node.Children.Any() && depth < 5)
            {
                foreach (var child in node.Children.Take(10))
                {
                    builder.AddContent(4, RenderFamilyTreeWithIndent(child, depth + 1));
                }
            }
        };
    }

    private string GetEventBadgeClass(string eventType)
    {
        return eventType switch
        {
            "Birth" => "bg-success",
            "Death" => "bg-dark",
            "Marriage" => "bg-info",
            "Pregnancy" => "bg-warning",
            "Invention" => "bg-warning",
            "City Founded" => "bg-primary",
            "Country Founded" => "bg-primary",
            "Religion Founded" => "bg-secondary",
            "War" => "bg-danger",
            "Law" => "bg-info",
            "Job" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    public void Dispose()
    {
        SimulatorService.OnStatsUpdated -= HandleStatsUpdated;
        SimulatorService.OnSpeedChanged -= HandleSpeedChanged;
        SimulatorService.OnSimulationRestarted -= HandleSimulationRestarted;
        SimulatorService.OnPausedChanged -= HandlePausedChanged;
    }
}

